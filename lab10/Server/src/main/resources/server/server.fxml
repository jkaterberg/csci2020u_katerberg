    <TextArea fx:id="bulletinDisplay" editable="false" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button fx:id="exitButton" text="Exit" onAction="#exit" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
</GridPane>