<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="client.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameInput" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Message:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="messageInput" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button fx:id="sendButton" text="Send" onAction="#sendMessage" GridPane.rowIndex="2"/>
    <Button fx:id="exitButton" text="Exit" onAction="#exit" GridPane.rowIndex="3"/>
</GridPane>